<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:text="0"
        android:textSize="50dp"
        android:gravity="center_vertical|right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:id="@+id/result" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@+id/result"
        android:id="@+id/button_row_1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="AC"
            android:textSize="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/dark_gray_button"
            android:id="@+id/btn_ac"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+/-"
            android:textSize="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/dark_gray_button"
            android:id="@+id/btn_signed"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="%"
            android:textSize="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/dark_gray_button"
            android:id="@+id/btn_percent"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/orange_button"
            android:id="@+id/btn_div"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@+id/button_row_1"
        android:id="@+id/button_row_2">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/light_gray_button"
            android:id="@+id/btn_7"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/light_gray_button"
            android:id="@+id/btn_8"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/light_gray_button"
            android:id="@+id/btn_9"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/orange_button"
            android:id="@+id/btn_mul"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@+id/button_row_2"
        android:id="@+id/button_row_3">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/light_gray_button"
            android:id="@+id/btn_4"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/light_gray_button"
            android:id="@+id/btn_5"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/light_gray_button"

            android:id="@+id/btn_6"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/orange_button"
            android:id="@+id/btn_sub"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@+id/button_row_3"
        android:id="@+id/button_row_4">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/light_gray_button"
            android:id="@+id/btn_1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/light_gray_button"
            android:id="@+id/btn_2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/light_gray_button"
            android:id="@+id/btn_3"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/orange_button"
            android:id="@+id/btn_add"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@+id/button_row_4"
        android:id="@+id/button_row_5">


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="0"
            android:textSize="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/light_gray_button"
            android:id="@+id/btn_0" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/light_gray_button"
            android:id="@+id/btn_dot"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/orange_button"
            android:id="@+id/btn_equals"/>
    </LinearLayout>

</LinearLayout>
